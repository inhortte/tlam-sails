    <tr>
    {{#if bloated}}
      <td>
        <a href="#" {{action 'bloat'}}>
          <span class="glyphicon glyphicon-chevron-up"></span>
        </a>
      </td>
      <td><span class="glyphicon glyphicon-tree-conifer"></span></td>
      <td><span class="glyphicon glyphicon-file"></span></td>
      <td colspan="8">
        <div class="container">
          <div class="row">
            <div class="col-md-2">
              <div>
                <strong>Nickname:</strong>
              </div>
              <div>
                <strong>Animal ID:</strong>
              </div>
              <div>
                <strong>Frequency:</strong>
              </div>
              <div>
                <strong>Sex:</strong>
              </div>
              <div>
                <strong>Birthdate:</strong>
              </div>
              <div>
                <strong>Release Date:</strong>
              </div>
              <div>
                <strong>Microchip:</strong>
              </div>
            </div>
            <div class="col-md-4">
              <div>
                {{nickname}}&nbsp;
              </div>
              <div>
                {{animal_id}}&nbsp;
              </div>
              <div>
                {{frequency}}&nbsp;
              </div>
              <div>
                {{sex}}&nbsp;
              </div>
              <div>
                {{birthdate}}&nbsp;
              </div>
              <div>
                {{release_date}}&nbsp;
              </div>
              <div>
                {{microchip}}&nbsp;
              </div>
            </div>
            <div class="col-md-2">
              <div>
                <strong>Enclosure Type:</strong>
              </div>
              <div>
                <strong>Release Site:</strong>
              </div>
              <div>
                <strong>Release Loc N:</strong>
              </div>
              <div>
                <strong>Release Loc E:</strong>
              </div>
              <div>
                <strong>Deathdate:</strong>
              </div>
              <div>
                <strong>Species:</strong>
              </div>
            </div>
            <div class="col-md-4">
              <div>
                {{enclosure_type}}&nbsp;
              </div>
              <div>
                {{release_site}}&nbsp;
              </div>
              <div>
                {{release_location_N}}&nbsp;
              </div>
              <div>
                {{release_location_E}}&nbsp;
              </div>
              <div>
                {{deathdate}}&nbsp;
              </div>
              <div>
                {{species.name}}&nbsp;
              </div>
            </div>
          </div>
          <hr />
          <div class="row">
            <div class="col-md-6">
              <div><strong>Remarks</strong></div>
              <div>{{remarks}}</div>
            </div>
            <div class="col-md-6">
              <div><strong>Cause of Death</strong></div>
              <div>{{cause_of_death}}</div>
            </div>
        </div>
      </td>
    {{else}}
      <td>
        <a href="#" {{action 'bloat'}}>
          <span class="glyphicon glyphicon-chevron-down"></span>
        </a>
      </td>
      <td><span class="glyphicon glyphicon-tree-conifer"></span></td>
      <td><span class="glyphicon glyphicon-file"></span></td>
      <td>{{#link-to 'animals.edit' id}}{{nickname}}{{/link-to}}</td>
      <td>{{species.name}}</td>
      <td>{{animal_id}}</td>
      <td>{{sex}}</td>
      <td>{{birthdate}}</td>
      <td>{{release_date}}</td>
      <td>{{release_location_N}}</td>
      <td>{{release_location_E}}</td>
    {{/if}}
    </tr>
