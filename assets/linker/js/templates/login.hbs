<div id="login">
  {{#if isProcessing}}
    <div class="flash neutral img-rounded">
      ÄŒekej, vole.
    </div>
  {{/if}}
  {{#if loginFailed}}
    <div class="flash idiotic img-rounded">
      What are you, stupid?
    </div>
  {{/if}}
  <form class="form-horizontal" {{action login on="submit"}}>
    <div class="control-group">
      <div class="input-group">
        <span class="input-group-addon">Login</span>
        {{input id="identification" type="text" class="form-control" placeholder="Username" valueBinding='identification'}}
      </div>
      <div class="input-group">
        <span class="input-group-addon">Password</span>
        {{input id="password" type="password" class="form-control" valueBinding="password" placeholder="My elbow itches"}}
      </div>
      <div class="input-group">
        <button type="submit" class="btn" {{bind-attr disabled="isProcessing"}}>Oouh!</button>
      </div>
    </div>
  </form>
</div>
